<style>

  .popupOverlay{
    position: absolute;
    z-index: 100;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.2);
    display: none;
  }

  .showDlg {
    display: block;
  }

  .popupContainer{
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
  }

  .popupContent{
    background-color: transparent;
  }

</style>
<div class="popupOverlay @(Show ? "showDlg" : "")">
  <div class="popupContainer">
    <div class="popupContent">
      @ChildContent
    </div>
  </div>
</div>


@functions {

  [Parameter]
  private bool Show { get; set; }

  [Parameter]
  private RenderFragment ChildContent { get; set; }

}
